---
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const bookEntries = await getCollection('book');
  return bookEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{entry.data.title}</title>
    <meta name="description" content={entry.data.desc} />
    <meta name="author" content={entry.data.author} />
    <style>
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        line-height: 1.6;
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
        background-color: #ffffff;
      }
      .book-header {
        border-bottom: 2px solid #e1e5e9;
        padding-bottom: 1rem;
        margin-bottom: 2rem;
      }
      .book-title {
        color: #1a202c;
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0 0 0.5rem 0;
      }
      .book-meta {
        color: #718096;
        font-size: 0.9rem;
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
      }
      .book-meta span {
        display: flex;
        align-items: center;
        gap: 0.25rem;
      }
      .book-content {
        color: #2d3748;
      }
      .book-content h1 {
        color: #1a202c;
        font-size: 1.875rem;
        margin: 2rem 0 1rem 0;
        border-bottom: 1px solid #e2e8f0;
        padding-bottom: 0.5rem;
      }
      .book-content h2 {
        color: #2d3748;
        font-size: 1.5rem;
        margin: 1.5rem 0 0.75rem 0;
      }
      .book-content h3 {
        color: #4a5568;
        font-size: 1.25rem;
        margin: 1.25rem 0 0.5rem 0;
      }
      .book-content pre {
        background-color: #f7fafc;
        border: 1px solid #e2e8f0;
        border-radius: 0.375rem;
        padding: 1rem;
        overflow-x: auto;
      }
      .book-content code {
        background-color: #edf2f7;
        padding: 0.125rem 0.25rem;
        border-radius: 0.25rem;
        font-size: 0.875em;
      }
      .book-content pre code {
        background-color: transparent;
        padding: 0;
        border-radius: 0;
      }
      .book-content blockquote {
        border-left: 4px solid #4299e1;
        padding-left: 1rem;
        margin: 1rem 0;
        background-color: #ebf8ff;
        padding: 1rem;
        border-radius: 0.25rem;
      }
      .navigation {
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 1px solid #e2e8f0;
        text-align: center;
      }
      .nav-link {
        color: #4299e1;
        text-decoration: none;
        font-weight: 500;
        margin: 0 1rem;
      }
      .nav-link:hover {
        text-decoration: underline;
      }
      .category-badge {
        background-color: #4299e1;
        color: white;
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
        font-size: 0.75rem;
        font-weight: 500;
        text-transform: uppercase;
      }
    </style>
  </head>
  <body>
    <main>
      <header class="book-header">
        <h1 class="book-title">{entry.data.title}</h1>
        <div class="book-meta">
          <span>
            üìù By {entry.data.author || 'Anonymous'}
          </span>
          <span>
            üìÖ {new Date(entry.data.date).toLocaleDateString()}
          </span>
          <span>
            <span class="category-badge">Typst</span>
          </span>
        </div>
      </header>

      <article class="book-content">
        <Content />
      </article>

      <nav class="navigation">
        <a href="/book" class="nav-link">‚Üê Back to Book Collection</a>
        <a href="/" class="nav-link">Home</a>
      </nav>
    </main>
  </body>
</html>
